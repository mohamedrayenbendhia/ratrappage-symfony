{% extends 'client/base_client.html.twig' %}

{% block title %}Rate Users{% endblock %}

{% block client_content %}
<style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .rating-container {
            padding: 30px 20px;
            min-height: 100vh;
        }
        
        .page-header {
            background: white;
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            text-align: center;
        }
        
        .page-header h1 {
            color: #333;
            margin-bottom: 10px;
            font-weight: 600;
        }
        
        .page-header .subtitle {
            color: #6c757d;
            font-size: 16px;
        }
        
        .rating-form-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
            display: block;
        }
        
        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: 0;
        }
        
        .btn-submit {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            color: white;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            font-size: 16px;
        }
        
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
            color: white;
        }
        
        .btn-back {
            background: #6c757d;
            border: none;
            padding: 10px 20px;
            border-radius: 20px;
            color: white;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }
        
        .btn-back:hover {
            background: #5a6268;
            color: white;
            text-decoration: none;
            transform: translateY(-1px);
        }
        
        .my-ratings-card {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .section-title {
            color: #333;
            font-weight: 600;
            margin-bottom: 25px;
            font-size: 20px;
        }
        
        .rating-item {
            border: 1px solid #e9ecef;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 15px;
            transition: all 0.3s ease;
        }
        
        .rating-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .rating-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }
        
        .rating-user {
            font-weight: 600;
            color: #333;
            font-size: 16px;
        }
        
        .rating-date {
            color: #6c757d;
            font-size: 12px;
        }
        
        .rating-stars {
            color: #ffc107;
            font-size: 18px;
            margin-bottom: 10px;
        }
        
        .rating-comment {
            color: #495057;
            font-style: italic;
            background: #f8f9fa;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 10px;
        }
        
        .rating-actions {
            text-align: right;
        }
        
        .btn-delete {
            background: #dc3545;
            border: none;
            padding: 5px 15px;
            border-radius: 15px;
            color: white;
            font-size: 12px;
            transition: all 0.3s ease;
        }
        
        .btn-delete:hover {
            background: #c82333;
            transform: translateY(-1px);
        }
        
        .empty-message {
            text-align: center;
            color: #6c757d;
            font-style: italic;
            padding: 40px;
        }
        
        .alert {
            border-radius: 10px;
            border: none;
            margin-bottom: 20px;
        }
        
        .star-rating-input {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 10px;
        }
        
        .star-options {
            display: flex;
            gap: 10px;
            justify-content: center;
        }
        
        .star-option {
            padding: 8px 12px;
            border: 2px solid #e9ecef;
            border-radius: 20px;
            background: white;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .star-option:hover {
            border-color: #ffc107;
            background: #fff8e1;
        }
        
        .star-option.selected {
            border-color: #ffc107;
            background: #ffc107;
            color: white;
        }
    </style>

<div class="rating-container">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1><i class="fas fa-star"></i> Rate Other Users</h1>
            <p class="subtitle">Share your experience and help build a better community</p>
        </div>
        
        
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'warning' ? 'warning' : 'success') }}">
                    <i class="fas fa-{{ label == 'success' ? 'check-circle' : (label == 'warning' ? 'exclamation-triangle' : 'times-circle') }}"></i>
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="row">
            <!-- Rating Form -->
            <div class="col-md-6">
                <div class="rating-form-card">
                    <h3 class="section-title">
                        <i class="fas fa-plus-circle"></i> Give a New Rating
                    </h3>
                    
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.rated, 'Select User to Rate', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.rated, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.stars, 'Rating', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.stars, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.comment, 'Comment (Optional)', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        
                        <button type="submit" class="btn-submit">
                            <i class="fas fa-star"></i> Submit Rating
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
            
            <!-- My Ratings -->
            <div class="col-md-6">
                <div class="my-ratings-card">
                    <h3 class="section-title">
                        <i class="fas fa-history"></i> My Ratings
                    </h3>
                    
                    {% if myRatings|length > 0 %}
                        {% for rating in myRatings %}
                            <div class="rating-item">
                                <div class="rating-header">
                                    <div class="rating-user">{{ rating.rated.name }}</div>
                                    <div class="rating-date">{{ rating.createdAt|date('M d, Y') }}</div>
                                </div>
                                
                                <div class="rating-stars">
                                    {% for i in 1..5 %}
                                        <i class="fas fa-star{{ i <= rating.stars ? '' : '-o' }}"></i>
                                    {% endfor %}
                                </div>
                                
                                {% if rating.comment %}
                                    <div class="rating-comment">
                                        "{{ rating.comment }}"
                                    </div>
                                {% endif %}
                                
                                <div class="rating-actions">
                                    <form method="post" action="{{ path('app_client_rating_delete', {'id': rating.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rating.id) }}">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this rating?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="empty-message">
                            <i class="fas fa-star-o fa-3x mb-3"></i>
                            <h5>No ratings given yet</h5>
                            <p>Start by rating other users to share your experience!</p>
                        </div>
                    {% endif %}
                </div>
            </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}
