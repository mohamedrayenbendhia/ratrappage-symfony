{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<section class="background-radial-gradient overflow-hidden">
    <style>
        /* Background Radial Gradient */
        .background-radial-gradient {
            background-color: hsl(218, 41%, 15%);
            background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
        }

        /* Glassmorphism Effect on Card */
        .bg-glass {
            background-color: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(25px);
            border-radius: 15px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .bg-glass:hover {
            box-shadow: 0 10px 50px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }

        /* Input Styling */
        input[type="password"] {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: hsl(218, 81%, 95%);
            font-size: 1rem;
            padding: 15px;
            border-radius: 8px;
            width: 100%;
            transition: all 0.3s ease;
        }

        input[type="password"]:focus {
            border-color: #ad1fff;
            outline: none;
            background: rgba(173, 31, 255, 0.1);
            box-shadow: 0 0 8px rgba(173, 31, 255, 0.6);
        }

        input[type="password"]::placeholder {
            color: hsl(218, 81%, 85%);
        }

        /* Button Styling */
        .btn-primary {
            background: linear-gradient(45deg, #44006b, #ad1fff);
            border: none;
            padding: 12px 25px;
            font-size: 1.2rem;
            color: white;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(173, 31, 255, 0.6);
        }
    </style>

    <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
        <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="my-5 display-5 fw-bold ls-tight">
                    Reset Your Password <br />
                    <span style="color: hsl(218, 81%, 75%)">Get back to your account!</span>
                </h1>
                <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                    Enter your new password below to regain access to your account.
                </p>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                <div class="card bg-glass">
                    <div class="card-body px-4 py-5 px-md-5">
                        {{ form_start(resetForm) }}
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    {{ form_row(resetForm.plainPassword) }}
                                </div>
                            </div>

                            <button class="btn btn-primary btn-block mb-4">Reset Password</button>
                        {{ form_end(resetForm) }}

                        <div class="text-center mt-3">
                            <p>Remembered your password? <a href="{{ path('app_login') }}">Log in here</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
