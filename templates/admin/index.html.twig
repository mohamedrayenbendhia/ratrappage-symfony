{% extends 'base.html.twig' %}

{% block title %}Administration - Home{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>Welcome, {{ app.user.email }}</h1>
            <p class="lead">Administrator Dashboard</p>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Statistics</h5>
                    <p class="card-text">View user statistics</p>
                    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-primary">View Dashboard</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Manage user accounts</p>
                    <a href="{{ path('app_user_index') }}" class="btn btn-success">Manage Users</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-sign-out-alt fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Logout</h5>
                    <p class="card-text">Logout from the system</p>
                    <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
