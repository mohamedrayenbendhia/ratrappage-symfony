{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/edit.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block sidebar-dark-blue sidebar">
            <div class="sidebar-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_user_index') }}">
                            <span data-feather="users"></span>
                            List Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_logout') }}">
                            <span data-feather="log-out"></span>
                            Logout
                        </a>
                    </li>
                    {% if app.user and app.user.id %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_user_profile') }}">
                            <span data-feather="user"></span>
                            Profile
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="card mt-5 shadow-lg">
                <div class="card-header" style="background: linear-gradient(90deg, #0d1a3a 0%, #1e3c72 100%); color: #fff;">
                    <h4 class="mb-0">Create New User</h4>
                </div>
                <div class="card-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary w-100">Create</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <a href="{{ path('app_user_index') }}" class="btn btn-link mt-3">Back to list</a>
<style>
.sidebar-dark-blue {
    background: linear-gradient(180deg, #0d1a3a 0%, #1e3c72 100%);
    min-height: 100vh;
}
.sidebar-dark-blue .nav-link {
    color: #fff !important;
    font-weight: 500;
    margin-bottom: 10px;
}
.sidebar-dark-blue .nav-link.active, .sidebar-dark-blue .nav-link:hover {
    background: #1e3c72;
    color: #fff;
    border-radius: 5px;
}
.card {
    border-radius: 12px;
}
.form-control {
    border-radius: 8px;
    border: 1px solid #1e3c72;
}
.btn-primary {
    background: linear-gradient(90deg, #0d1a3a 0%, #1e3c72 100%);
    border: none;
    border-radius: 8px;
    font-weight: 600;
}
</style>
        </main>
    </div>
</div>
{% endblock %}