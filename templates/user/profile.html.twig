{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .profile-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px 0;
        }
        
        .profile-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            overflow: hidden;
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
        }
        
        .profile-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 40px 30px 30px;
            text-align: center;
            color: white;
        }
        
        .profile-image-container {
            position: relative;
            margin-bottom: 20px;
        }
        
        .profile-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 5px solid white;
            object-fit: cover;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        
        .profile-image-placeholder {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 5px solid white;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            font-size: 48px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin: 0 auto;
        }
        
        .profile-name {
            font-size: 24px;
            font-weight: 600;
            margin: 15px 0 5px;
        }
        
        .profile-role {
            font-size: 14px;
            background: rgba(255, 255, 255, 0.2);
            padding: 4px 12px;
            border-radius: 15px;
            display: inline-block;
            margin-bottom: 10px;
            font-weight: 500;
        }
        
        .profile-email {
            opacity: 0.9;
            font-size: 16px;
        }
        
        .profile-form {
            padding: 40px 30px;
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
            display: block;
        }
        
        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: 0;
        }
        
        .btn-update {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            color: white;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            font-size: 16px;
        }
        
        .btn-update:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
            color: white;
        }
        
        .btn-back {
            background: #6c757d;
            border: none;
            padding: 10px 20px;
            border-radius: 20px;
            color: white;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }
        
        .btn-back:hover {
            background: #5a6268;
            color: white;
            text-decoration: none;
            transform: translateY(-1px);
        }
        
        .alert {
            border-radius: 10px;
            border: none;
            margin-bottom: 20px;
        }
        
        .form-help {
            font-size: 12px;
            color: #6c757d;
            margin-top: 5px;
        }
        
        .image-preview {
            text-align: center;
            margin-top: 10px;
        }
        
        .image-preview img {
            max-width: 80px;
            max-height: 80px;
            border-radius: 10px;
            border: 2px solid #e9ecef;
        }
        
        .form-errors {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
        }
        
        .form-errors ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .form-errors li {
            margin-bottom: 3px;
        }
        
        .has-error .form-control {
            border-color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
<div class="profile-container">
    <div class="profile-card">
        <!-- Header avec photo de profil -->
        <div class="profile-header">
            <div class="profile-image-container">
                {% if user.image %}
                    <img src="{{ user.image }}" alt="Photo de profil" class="profile-image" id="currentProfileImage">
                {% else %}
                    <div class="profile-image-placeholder">
                        <i class="fas fa-user"></i>
                    </div>
                {% endif %}
            </div>
            <div class="profile-name">{{ user.name }}</div>
            <div class="profile-role">
                {% set primaryRole = '' %}
                {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                    {% set primaryRole = 'Super Admin' %}
                {% elseif 'ROLE_ADMIN' in user.roles %}
                    {% set primaryRole = 'Admin' %}
                {% else %}
                    {% set primaryRole = 'Client' %}
                {% endif %}
                {{ primaryRole }}
            </div>
            <div class="profile-email">{{ user.email }}</div>
        </div>
        
        <!-- Formulaire -->
        <div class="profile-form">
            {% if app.user and 'ROLE_USER' in app.user.roles and 'ROLE_ADMIN' not in app.user.roles and 'ROLE_SUPER_ADMIN' not in app.user.roles %}
                <a href="{{ path('app_client_dashboard') }}" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back to dashboard
                </a>
            {% else %}
                <a href="{{ path('app_user_index') }}" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back to list
                </a>
            {% endif %}
            
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'warning' ? 'warning' : 'success') }}">
                        <i class="fas fa-{{ label == 'success' ? 'check-circle' : (label == 'warning' ? 'exclamation-triangle' : 'times-circle') }}"></i>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn-update">
                    <i class="fas fa-save"></i> Update Profile
                </button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const imageInput = document.getElementById('profile_imageFile');
    const previewContainer = document.getElementById('imagePreview');
    const previewImg = document.getElementById('previewImg');
    const currentImage = document.getElementById('currentProfileImage');
    
    if (imageInput) {
        imageInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            
            if (file) {
                // Vérifier que c'est bien une image
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        previewImg.src = e.target.result;
                        previewContainer.style.display = 'block';
                        
                        // Mettre à jour l'image de profil en temps réel
                        if (currentImage) {
                            currentImage.src = e.target.result;
                        }
                    };
                    
                    reader.readAsDataURL(file);
                } else {
                    previewContainer.style.display = 'none';
                    alert('Please select a valid image file.');
                }
            } else {
                previewContainer.style.display = 'none';
            }
        });
    }
});
</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}
