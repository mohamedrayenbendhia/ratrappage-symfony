{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-dark sidebar">
            <div class="sidebar-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_user_index') }}">
                            <span data-feather="users"></span>
                            List Users
                        </a>
                    </li>
                    {% if app.user and app.user.id %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_user_profile') }}">
                            <span data-feather="user"></span>
                            Profile
                        </a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_logout') }}">
                            <span data-feather="log-out"></span>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="card mt-5 shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">User Management</h4>
                </div>
                <div class="card-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="bg-light p-3 rounded mb-3">
                                <form method="GET" class="d-flex gap-2 align-items-end">
                                    <div class="flex-grow-1">
                                        <label for="search" class="form-label">Search</label>
                                        <input type="text" id="search" name="search" class="form-control" placeholder="Search by email or name..." value="{{ search }}">
                                    </div>
                                    <div style="min-width: 150px;">
                                        <label for="role" class="form-label">Role Filter</label>
                                        <select id="role" name="role" class="form-select">
                                            <option value="">All Roles</option>
                                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                                <option value="ROLE_ADMIN" {{ roleFilter == 'ROLE_ADMIN' ? 'selected' : '' }}>Admin</option>
                                            {% endif %}
                                            <option value="ROLE_USER" {{ roleFilter == 'ROLE_USER' ? 'selected' : '' }}>Client</option>
                                        </select>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i> Search
                                        </button>
                                        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                                            <i class="fas fa-times"></i> Clear
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-12 text-end">
                            <a href="{{ path('app_user_new') }}" class="btn btn-success">
                                <i class="fas fa-plus"></i> Add User
                            </a>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Roles</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th>Last Connection</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in pagination.items %}
                            <tr>
                                <td>{{ user.name }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.phoneNumber }}</td>
                                <td>
                                    {% set primaryRole = '' %}
                                    {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                                        {% set primaryRole = 'ROLE_SUPER_ADMIN' %}
                                    {% elseif 'ROLE_ADMIN' in user.roles %}
                                        {% set primaryRole = 'ROLE_ADMIN' %}
                                    {% else %}
                                        {% set primaryRole = 'ROLE_USER' %}
                                    {% endif %}
                                    
                                    {% if primaryRole == 'ROLE_SUPER_ADMIN' %}
                                        <span class="badge bg-danger">Super Admin</span>
                                    {% elseif primaryRole == 'ROLE_ADMIN' %}
                                        <span class="badge bg-warning text-dark">Admin</span>
                                    {% elseif primaryRole == 'ROLE_USER' %}
                                        <span class="badge bg-info">Client</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        {% if user.isBlocked %}
                                            <span class="badge bg-danger">Blocked</span>
                                        {% else %}
                                            <span class="badge bg-success">Active</span>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ user.lastConnexion ? user.lastConnexion|date('Y-m-d H:i:s') : 'Never' }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                                        <form method="post" action="{{ path(user.isBlocked ? 'app_user_unblock' : 'app_user_block', {'id': user.id}) }}" style="display:inline-block">
                                            <input type="hidden" name="_token" value="{{ csrf_token((user.isBlocked ? 'unblock' : 'block') ~ user.id) }}">
                                            {% if user.isBlocked %}
                                                <button class="btn btn-sm btn-success" title="Unblock user">Unblock</button>
                                            {% else %}
                                                <button class="btn btn-sm btn-warning" title="Block user">Block</button>
                                            {% endif %}
                                        </form>
                                        <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button class="btn btn-sm btn-danger" title="Delete user">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    {% if search or roleFilter %}
                                        No users found matching your search criteria.
                                    {% else %}
                                        No users found.
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div class="text-muted">
                            Showing {{ pagination.items|length }} of {{ pagination.totalItems }} users
                        </div>
                        <div>
                            {% if pagination.totalPages > 1 %}
                                <nav>
                                    <ul class="pagination">
                                        {% if pagination.hasPreviousPage %}
                                            <li class="page-item">
                                                <a class="page-link" href="{{ path('app_user_index', {page: pagination.previousPage, search: search, role: roleFilter}) }}">Previous</a>
                                            </li>
                                        {% endif %}

                                        {% if pagination.currentPage > 1 %}
                                            <li class="page-item">
                                                <a class="page-link" href="{{ path('app_user_index', {page: 1, search: search, role: roleFilter}) }}">1</a>
                                            </li>
                                            {% if pagination.currentPage > 2 %}
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            {% endif %}
                                        {% endif %}
                                        
                                        <li class="page-item active">
                                            <span class="page-link">{{ pagination.currentPage }}</span>
                                        </li>
                                        
                                        {% if pagination.currentPage < pagination.totalPages %}
                                            {% if pagination.currentPage < pagination.totalPages - 1 %}
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            {% endif %}
                                            <li class="page-item">
                                                <a class="page-link" href="{{ path('app_user_index', {page: pagination.totalPages, search: search, role: roleFilter}) }}">{{ pagination.totalPages }}</a>
                                            </li>
                                        {% endif %}

                                        {% if pagination.hasNextPage %}
                                            <li class="page-item">
                                                <a class="page-link" href="{{ path('app_user_index', {page: pagination.nextPage, search: search, role: roleFilter}) }}">Next</a>
                                            </li>
                                        {% endif %}
                                    </ul>
                                </nav>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

{% endblock %}
