{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block sidebar-dark-blue sidebar">
            <div class="sidebar-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_user_index') }}">
                            <span data-feather="users"></span>
                            List Users
                        </a>
                    </li>
                    {% if app.user and app.user.id %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_user_profile') }}">
                            <span data-feather="user"></span>
                            Profile
                        </a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_logout') }}">
                            <span data-feather="log-out"></span>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- Main content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="card mt-5 shadow-lg">
                <div class="card-header" style="background: linear-gradient(90deg, #0d1a3a 0%, #1e3c72 100%); color: #fff;">
                    <h4 class="mb-0">User Management</h4>
                </div>
                <div class="card-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    <a href="{{ path('app_user_new') }}" class="btn btn-success mb-3">Add User</a>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Roles</th>
                                <th>Is Verified</th>
                                <th>Created At</th>
                                <th>Last Connection</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% set primaryRole = '' %}
                                    {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                                        {% set primaryRole = 'ROLE_SUPER_ADMIN' %}
                                    {% elseif 'ROLE_ADMIN' in user.roles %}
                                        {% set primaryRole = 'ROLE_ADMIN' %}
                                    {% else %}
                                        {% set primaryRole = 'ROLE_USER' %}
                                    {% endif %}
                                    
                                    {% if primaryRole == 'ROLE_SUPER_ADMIN' %}
                                        <span class="badge bg-danger">Super Admin</span>
                                    {% elseif primaryRole == 'ROLE_ADMIN' %}
                                        <span class="badge bg-warning">Admin</span>
                                    {% elseif primaryRole == 'ROLE_USER' %}
                                        <span class="badge bg-info">Client</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="status {{ user.isVerified ? 'text-success' : 'text-danger' }}">&bull;</span>
                                    {{ user.isVerified ? 'Yes' : 'No' }}
                                </td>
                                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ user.lastConnexion ? user.lastConnexion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                    <form method="post" action="{{ path(user.isBlocked ? 'app_user_unblock' : 'app_user_block', {'id': user.id}) }}" style="display:inline-block">
                                        <input type="hidden" name="_token" value="{{ csrf_token((user.isBlocked ? 'unblock' : 'block') ~ user.id) }}">
                                        {% if user.isBlocked %}
                                            <button class="btn btn-sm btn-success">Unblock</button>
                                        {% else %}
                                            <button class="btn btn-sm btn-warning">Block</button>
                                        {% endif %}
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">No records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</div>

