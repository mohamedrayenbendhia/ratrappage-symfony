{# templates/pagination/custom_pagination.html.twig #}
{% if pageCount > 1 %}
<nav aria-label="Page navigation">
    <ul class="pagination pagination-sm justify-content-center">
        {# First page link #}
        {% if current > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">
                    <i class="fas fa-angle-double-left"></i> First
                </a>
            </li>
        {% endif %}

        {# Previous page link #}
        {% if previous is defined %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                    <i class="fas fa-angle-left"></i> Previous
                </a>
            </li>
        {% endif %}

        {# Page numbers #}
        {% for page in pagesInRange %}
            {% if page != current %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="page-item active">
                    <span class="page-link">{{ page }}</span>
                </li>
            {% endif %}
        {% endfor %}

        {# Next page link #}
        {% if next is defined %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                    Next <i class="fas fa-angle-right"></i>
                </a>
            </li>
        {% endif %}

        {# Last page link #}
        {% if current < pageCount %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">
                    Last <i class="fas fa-angle-double-right"></i>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>
{% endif %}